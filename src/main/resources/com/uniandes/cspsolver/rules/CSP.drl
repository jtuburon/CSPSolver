package com.uniandes.cspsolver

rule "Show Variables"
	salience 1000
	when
		v: Variable()
	then
		System.out.println(v);
end


rule "Show Clues"
	salience 1000
	when
		c: SingleClue()
	then
		System.out.println(c);
end

rule "DirectAssignment"
	salience 500
	when
		c: SingleClue(relationship == "=", $v1: dstVar, value matches "\\d+")
		v: Variable(name==$v1, value != c.value)		
	then
		System.out.println("Saque:" + v);
		retract(v);
end
